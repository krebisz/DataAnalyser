<UserControl x:Class="DataVisualiser.UI.Controllers.DistributionChartController"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
             xmlns:lvc2="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
             xmlns:controllers="clr-namespace:DataVisualiser.UI.Controllers"
             mc:Ignorable="d"
             d:DesignHeight="550"
             d:DesignWidth="1000">
    <Grid x:Name="RootGrid">
        <controllers:ChartPanelController x:Name="PanelController" />

        <StackPanel x:Name="BehavioralControlsPanel" Orientation="Horizontal" Margin="40,5,10,0">
            <TextBlock Text="Mode:"
                       VerticalAlignment="Center"
                       Margin="0,0,10,0" />

            <ComboBox x:Name="DistributionModeComboControl"
                      Width="100"
                      VerticalAlignment="Center" />

            <TextBlock Text="Subtype:"
                       VerticalAlignment="Center"
                       Margin="20,0,10,0" />

            <ComboBox x:Name="DistributionSubtypeComboControl"
                      Width="160"
                      VerticalAlignment="Center" />

            <TextBlock Text="Display Mode:"
                       VerticalAlignment="Center"
                       Margin="20,0,10,0" />

            <RadioButton x:Name="DistributionFrequencyShadingRadioControl"
                         Content="Frequency Shading"
                         GroupName="DistributionDisplayModes"
                         IsChecked="True" />

            <RadioButton x:Name="DistributionSimpleRangeRadioControl"
                         Content="Simple Range"
                         GroupName="DistributionDisplayModes" />

            <TextBlock Text="Interval Count:"
                       VerticalAlignment="Center"
                       Margin="20,0,10,0" />

            <ComboBox x:Name="DistributionIntervalCountComboControl"
                      Width="80"
                      VerticalAlignment="Center" />

            <Button x:Name="DistributionChartTypeToggleButtonControl"
                    Content="Polar"
                    Margin="20,0,0,0"
                    Padding="10,3"
                    VerticalAlignment="Center"
                    ToolTip="Toggle between Cartesian and Polar chart" />
        </StackPanel>

        <StackPanel x:Name="ChartContentPanelRoot" Orientation="Vertical">
            <lvc:CartesianChart x:Name="ChartDistributionControl"
                                LegendLocation="Right"
                                Zoom="X"
                                Pan="X"
                                Hoverable="True"
                                Margin="20,5,10,20"
                                MinHeight="400">
                <lvc:CartesianChart.AxisX>
                    <lvc:Axis Title="Bucket" />
                </lvc:CartesianChart.AxisX>
                <lvc:CartesianChart.AxisY>
                    <lvc:Axis Title="Value"
                              ShowLabels="True" />
                </lvc:CartesianChart.AxisY>
            </lvc:CartesianChart>

            <lvc2:PolarChart x:Name="ChartDistributionPolarControl"
                             LegendPosition="Right"
                             Margin="20,5,10,20"
                             MinHeight="400"
                             InitialRotation="-45"
                             Visibility="Collapsed" />
        </StackPanel>
    </Grid>
</UserControl>
