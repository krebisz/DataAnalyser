<UserControl x:Class="DataVisualiser.UI.Controllers.NormalizedChartController"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
             xmlns:controllers="clr-namespace:DataVisualiser.UI.Controllers"
             mc:Ignorable="d"
             d:DesignHeight="550"
             d:DesignWidth="900">
    <Grid x:Name="RootGrid">
        <controllers:ChartPanelController x:Name="PanelController" />

        <StackPanel x:Name="BehavioralControlsPanel" Orientation="Horizontal" Margin="40,5,10,0">
            <TextBlock Text="Normalization:"
                       VerticalAlignment="Center"
                       Margin="0,0,10,0" />

            <RadioButton x:Name="NormZeroToOneRadioControl"
                         Content="Zero-To-One"
                         Margin="5,0"
                         GroupName="NormModes" />

            <RadioButton x:Name="NormPercentOfMaxRadioControl"
                         Content="% of Max"
                         Margin="5,0"
                         GroupName="NormModes"
                         IsChecked="True" />

            <RadioButton x:Name="NormRelativeToMaxRadioControl"
                         Content="Relative to Max"
                         Margin="5,0"
                         GroupName="NormModes" />
        </StackPanel>

        <StackPanel x:Name="ChartContentPanelRoot" Orientation="Vertical">
            <lvc:CartesianChart x:Name="ChartNormControl"
                                LegendLocation="Right"
                                Zoom="X"
                                Pan="X"
                                Hoverable="True"
                                Margin="20,5,10,20"
                                MinHeight="400">
                <lvc:CartesianChart.AxisX>
                    <lvc:Axis Title="Time" />
                </lvc:CartesianChart.AxisX>
                <lvc:CartesianChart.AxisY>
                    <lvc:Axis Title="Relative"
                              ShowLabels="True" />
                </lvc:CartesianChart.AxisY>
            </lvc:CartesianChart>
        </StackPanel>
    </Grid>
</UserControl>
