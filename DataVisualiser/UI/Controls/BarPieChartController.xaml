<UserControl x:Class="DataVisualiser.UI.Controls.BarPieChartController"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:controls="clr-namespace:DataVisualiser.UI.Controls"
             xmlns:ui="clr-namespace:DataVisualiser.UI.Defaults"
             mc:Ignorable="d"
             d:DesignHeight="550"
             d:DesignWidth="800">
    <Grid x:Name="RootGrid">
        <controls:ChartPanelController x:Name="PanelController" />

        <StackPanel x:Name="BehavioralControlsPanel"
                    Orientation="Horizontal"
                    Margin="{x:Static ui:ChartUiDefaults.BehavioralControlsMargin}">
            <TextBlock Text="Display:"
                       VerticalAlignment="Center"
                       Margin="{x:Static ui:ChartUiDefaults.LabelMargin}" />

            <RadioButton x:Name="BarModeRadioControl"
                         Content="Bar"
                         Margin="{x:Static ui:ChartUiDefaults.RadioButtonMargin}"
                         GroupName="BarPieModes"
                         IsChecked="True" />

            <RadioButton x:Name="PieModeRadioControl"
                         Content="Pie"
                         Margin="{x:Static ui:ChartUiDefaults.RadioButtonMargin}"
                         GroupName="BarPieModes" />

            <TextBlock Text="Intervals:"
                       VerticalAlignment="Center"
                       Margin="{x:Static ui:ChartUiDefaults.SectionLabelMargin}" />

            <ComboBox x:Name="BucketCountComboControl"
                      Width="{x:Static ui:ChartUiDefaults.SubtypeComboWidth}"
                      Margin="{x:Static ui:ChartUiDefaults.RadioButtonMargin}" />
        </StackPanel>
    </Grid>
</UserControl>
