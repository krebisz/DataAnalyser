<UserControl x:Class="DataVisualiser.UI.Controls.ChartPanelController"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:ui="clr-namespace:DataVisualiser.UI"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <Border BorderBrush="{x:Static ui:ChartUiDefaults.ChartPanelBorderBrush}"
            BorderThickness="1"
            Margin="{x:Static ui:ChartUiDefaults.ChartPanelBorderMargin}">
        <StackPanel Orientation="Vertical" Margin="{x:Static ui:ChartUiDefaults.ChartPanelStackMargin}">
            <!-- Header Section -->
            <Border Background="{x:Static ui:ChartUiDefaults.ChartHeaderBackground}"
                    BorderBrush="{x:Static ui:ChartUiDefaults.ChartHeaderBorderBrush}"
                    BorderThickness="1"
                    Padding="{x:Static ui:ChartUiDefaults.ChartHeaderPadding}">
                <StackPanel Orientation="Horizontal" Margin="{x:Static ui:ChartUiDefaults.ChartHeaderMargin}">
                    <TextBlock x:Name="TitleTextBlock"
                               Text="{Binding Title, RelativeSource={RelativeSource AncestorType=UserControl}}"
                               FontWeight="Bold"
                               FontSize="{x:Static ui:ChartUiDefaults.ChartHeaderFontSize}"
                               VerticalAlignment="Center" />
                    <Button x:Name="ToggleButton"
                            Content="{x:Static ui:UiDefaults.ToggleShowLabel}"
                            Margin="{x:Static ui:ChartUiDefaults.ChartHeaderToggleMargin}"
                            Padding="{x:Static ui:ChartUiDefaults.ChartHeaderTogglePadding}"
                            Click="OnToggleButtonClick" />
                    <!-- Additional Header Controls -->
                    <ContentPresenter x:Name="HeaderControlsPresenter"
                                      Margin="{x:Static ui:ChartUiDefaults.ChartHeaderControlsMargin}"
                                      VerticalAlignment="Center" />
                </StackPanel>
            </Border>

            <!-- Behavioral Controls Section (Optional) -->
            <ContentPresenter x:Name="BehavioralControlsPresenter"
                              Margin="{x:Static ui:ChartUiDefaults.BehavioralControlsMargin}" />

            <!-- Chart Content Panel -->
            <StackPanel x:Name="ContentPanel"
                        Orientation="Vertical"
                        Visibility="Collapsed">
                <ContentPresenter x:Name="ChartContentPresenter" />
            </StackPanel>
        </StackPanel>
    </Border>
</UserControl>

