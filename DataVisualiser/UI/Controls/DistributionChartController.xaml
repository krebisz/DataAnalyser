<UserControl x:Class="DataVisualiser.UI.Controls.DistributionChartController"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
             xmlns:lvc2="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
             xmlns:controls="clr-namespace:DataVisualiser.UI.Controls"
             xmlns:ui="clr-namespace:DataVisualiser.UI.Defaults"
             mc:Ignorable="d"
             d:DesignHeight="550"
             d:DesignWidth="1000">
    <Grid x:Name="RootGrid">
        <controls:ChartPanelController x:Name="PanelController" />

        <StackPanel x:Name="BehavioralControlsPanel" Orientation="Horizontal"
                    Margin="{x:Static ui:ChartUiDefaults.BehavioralControlsMargin}">
            <TextBlock Text="Mode:"
                       VerticalAlignment="Center"
                       Margin="{x:Static ui:ChartUiDefaults.LabelMargin}" />

            <ComboBox x:Name="DistributionModeComboControl"
                      Width="{x:Static ui:ChartUiDefaults.DistributionModeComboWidth}"
                      VerticalAlignment="Center" />

            <TextBlock Text="Subtype:"
                       VerticalAlignment="Center"
                       Margin="{x:Static ui:ChartUiDefaults.SectionLabelMargin}" />

            <ComboBox x:Name="DistributionSubtypeComboControl"
                      Width="{x:Static ui:ChartUiDefaults.DistributionSubtypeComboWidth}"
                      VerticalAlignment="Center" />

            <TextBlock Text="Display Mode:"
                       VerticalAlignment="Center"
                       Margin="{x:Static ui:ChartUiDefaults.SectionLabelMargin}" />

            <RadioButton x:Name="DistributionFrequencyShadingRadioControl"
                         Content="Frequency Shading"
                         GroupName="DistributionDisplayModes"
                         IsChecked="True" />

            <RadioButton x:Name="DistributionSimpleRangeRadioControl"
                         Content="Simple Range"
                         GroupName="DistributionDisplayModes" />

            <TextBlock Text="Interval Count:"
                       VerticalAlignment="Center"
                       Margin="{x:Static ui:ChartUiDefaults.SectionLabelMargin}" />

            <ComboBox x:Name="DistributionIntervalCountComboControl"
                      Width="{x:Static ui:ChartUiDefaults.DistributionIntervalComboWidth}"
                      VerticalAlignment="Center" />

            <Button x:Name="DistributionChartTypeToggleButtonControl"
                    Content="{x:Static ui:ChartUiDefaults.ChartTypeToggleLabel}"
                    Margin="{x:Static ui:ChartUiDefaults.ToggleButtonMargin}"
                    Padding="{x:Static ui:ChartUiDefaults.ToggleButtonPaddingCompact}"
                    VerticalAlignment="Center"
                    ToolTip="{x:Static ui:ChartUiDefaults.ChartTypeToggleToolTip}" />
        </StackPanel>

        <StackPanel x:Name="ChartContentPanelRoot" Orientation="Vertical">
            <lvc:CartesianChart x:Name="ChartDistributionControl"
                                LegendLocation="{x:Static ui:ChartUiDefaults.DefaultLegendLocation}"
                                Zoom="{x:Static ui:ChartUiDefaults.DefaultZoom}"
                                Pan="{x:Static ui:ChartUiDefaults.DefaultPan}"
                                Hoverable="{x:Static ui:ChartUiDefaults.DefaultHoverable}"
                                Margin="{x:Static ui:ChartUiDefaults.ChartContentMargin}"
                                MinHeight="{x:Static ui:ChartUiDefaults.ChartMinHeight}">
                <lvc:CartesianChart.AxisX>
                    <lvc:Axis Title="{x:Static ui:ChartUiDefaults.AxisTitleBucket}" />
                </lvc:CartesianChart.AxisX>
                <lvc:CartesianChart.AxisY>
                    <lvc:Axis Title="{x:Static ui:ChartUiDefaults.AxisTitleValue}"
                              ShowLabels="True" />
                </lvc:CartesianChart.AxisY>
            </lvc:CartesianChart>

            <lvc2:PolarChart x:Name="ChartDistributionPolarControl"
                             LegendPosition="Right"
                             Margin="{x:Static ui:ChartUiDefaults.ChartContentMargin}"
                             MinHeight="{x:Static ui:ChartUiDefaults.ChartMinHeight}"
                             InitialRotation="{x:Static ui:ChartUiDefaults.DistributionPolarInitialRotation}"
                             Visibility="Collapsed" />
        </StackPanel>
    </Grid>
</UserControl>