<UserControl x:Class="DataVisualiser.UI.Controls.NormalizedChartController"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
             xmlns:controls="clr-namespace:DataVisualiser.UI.Controls"
             xmlns:ui="clr-namespace:DataVisualiser.UI"
             mc:Ignorable="d"
             d:DesignHeight="550"
             d:DesignWidth="900">
    <Grid x:Name="RootGrid">
        <controls:ChartPanelController x:Name="PanelController" />

        <StackPanel x:Name="BehavioralControlsPanel" Orientation="Horizontal" Margin="{x:Static ui:ChartUiDefaults.BehavioralControlsMargin}">
            <TextBlock Text="Normalization:"
                       VerticalAlignment="Center"
                       Margin="{x:Static ui:ChartUiDefaults.LabelMargin}" />

            <RadioButton x:Name="NormZeroToOneRadioControl"
                         Content="Zero-To-One"
                         Margin="{x:Static ui:ChartUiDefaults.RadioButtonMargin}"
                         GroupName="NormModes" />

            <RadioButton x:Name="NormPercentOfMaxRadioControl"
                         Content="% of Max"
                         Margin="{x:Static ui:ChartUiDefaults.RadioButtonMargin}"
                         GroupName="NormModes"
                         IsChecked="True" />

            <RadioButton x:Name="NormRelativeToMaxRadioControl"
                         Content="Relative to Max"
                         Margin="{x:Static ui:ChartUiDefaults.RadioButtonMargin}"
                         GroupName="NormModes" />
        </StackPanel>

        <StackPanel x:Name="ChartContentPanelRoot" Orientation="Vertical">
            <lvc:CartesianChart x:Name="ChartNormControl"
                                LegendLocation="{x:Static ui:ChartUiDefaults.DefaultLegendLocation}"
                                Zoom="{x:Static ui:ChartUiDefaults.DefaultZoom}"
                                Pan="{x:Static ui:ChartUiDefaults.DefaultPan}"
                                Hoverable="{x:Static ui:ChartUiDefaults.DefaultHoverable}"
                                Margin="{x:Static ui:ChartUiDefaults.ChartContentMargin}"
                                MinHeight="{x:Static ui:ChartUiDefaults.ChartMinHeight}">
                <lvc:CartesianChart.AxisX>
                    <lvc:Axis Title="{x:Static ui:ChartUiDefaults.AxisTitleTime}" />
                </lvc:CartesianChart.AxisX>
                <lvc:CartesianChart.AxisY>
                    <lvc:Axis Title="{x:Static ui:ChartUiDefaults.AxisTitleRelative}"
                              ShowLabels="True" />
                </lvc:CartesianChart.AxisY>
            </lvc:CartesianChart>
        </StackPanel>
    </Grid>
</UserControl>


